    P_NAME     IN VARCHAR2 ,
    P_BOARD_ID IN VARCHAR2 ,
    P_ID OUT VARCHAR2 ,
    OUT_MSG OUT VARCHAR2 )
IS
  V_ID NUMBER;
BEGIN
