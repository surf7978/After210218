WHEN OTHERS THEN
  P_ID    := 0;
  OUT_MSG := TO_CHAR(SQLCODE) || ' : ' || SQLERRM;
END COMMENTS_INS;

alter table comments add wdate date;
update comments set wdate = sysdate;
commit;
